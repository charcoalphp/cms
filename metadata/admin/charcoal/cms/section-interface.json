{
    "admin": {
        "lists": {
            "cms.default": {
                "properties": [
                    "title",
                    "templateIdent",
                    "lastModified",
                    "active"
                ],
                "propertiesOptions": {
                    "title": {
                        "displayType": "charcoal/admin/property/display/hierarchical",
                        "viewOptions": {
                            "attr": {
                                "width": "55%"
                            }
                        }
                    },
                    "templateIdent": {
                        "viewOptions": {
                            "attr": {
                                "width": "15%"
                            }
                        }
                    },
                    "lastModified": {
                        "viewOptions": {
                            "attr": {
                                "width": "15%"
                            }
                        }
                    },
                    "active": {
                        "viewOptions": {
                            "attr": {
                                "width": "5%",
                                "class": "text-center"
                            }
                        }
                    }
                },
                "listActions": {
                    "create": {
                        "ident": "create",
                        "priority": 10,
                        "label": {
                            "en": "new Page",
                            "fr": "Nouvelle page"
                        },
                        "url": "object/edit?main_menu={{main_menu}}&obj_type={{obj_type}}"
                    },
                    "mainMenu": {
                        "ident": "main_menu",
                        "priority": 20,
                        "label": {
                            "en": "Pages in menu",
                            "fr": "Pages dans le menu"
                        },
                        "url": "object/collection?main_menu={{main_menu}}&obj_type={{obj_type}}&dashboard_ident=cms.table&collection_ident=cms.in_menu"
                    }
                },
                "objectActions": {
                    "edit": {
                        "label": {
                            "en": "Modify",
                            "fr": "Modifier"
                        },
                        "url": "object/edit?main_menu={{main_menu}}&obj_type={{obj_type}}&obj_id={{id}}",
                        "priority": 1,
                        "splitButton": true,
                        "actions": {
                            "goto": {
                                "label": {
                                    "en": "Go to page",
                                    "fr": "Voir la page"
                                },
                                "url": "{{baseUrl}}{{url}}",
                                "target": "_blank",
                                "priority": 2
                            },
                            "clone": {
                                "label": {
                                    "en": "Clone",
                                    "fr": "Cloner"
                                },
                                "url": "object/edit?main_menu={{main_menu}}&obj_type={{obj_type}}&clone_id={{id}}",
                                "priority": 3
                            },
                            "delete": {
                                "label": {
                                    "en": "Delete",
                                    "fr": "Supprimer"
                                },
                                "priority": 4
                            }
                        }
                    }
                },
                "orders": {
                    "position": {
                        "property": "position",
                        "mode": "asc"
                    }
                }
            },
            "cms.in_menu": {
                "label": {
                    "fr": "Pages du menu principal",
                    "en": "Pages in Main Menu"
                },
                "properties": [
                    "title",
                    "templateIdent",
                    "lastModified",
                    "active"
                ],
                "propertiesOptions": {
                    "title": {
                        "viewOptions": {
                            "attr": {
                                "width": "55%"
                            }
                        }
                    },
                    "templateIdent": {
                        "viewOptions": {
                            "attr": {
                                "width": "15%"
                            }
                        }
                    },
                    "lastModified": {
                        "viewOptions": {
                            "attr": {
                                "width": "15%"
                            }
                        }
                    },
                    "active": {
                        "viewOptions": {
                            "attr": {
                                "width": "5%",
                                "class": "text-center"
                            }
                        }
                    }
                },
                "listActions": {
                    "create": {
                        "ident": "create",
                        "priority": 1,
                        "label": {
                            "en": "New Page",
                            "fr": "Nouvelle Page"
                        },
                        "url": "object/edit?main_menu={{main_menu}}&obj_type={{obj_type}}"
                    },
                    "mainMenu": {
                        "ident": "sidebar",
                        "priority": 2,
                        "label": {
                            "en": "All Pages",
                            "fr": "Toutes les pages"
                        },
                        "url": "object/collection?main_menu={{main_menu}}&obj_type={{obj_type}}"
                    }
                },
                "objectActions": {
                    "edit": {
                        "label": {
                            "en": "Modify",
                            "fr": "Modifier"
                        },
                        "url": "object/edit?main_menu={{main_menu}}&obj_type={{obj_type}}&obj_id={{id}}",
                        "priority": 1,
                        "splitButton": true,
                        "actions": {
                            "goto": {
                                "label": {
                                    "en": "Go to page",
                                    "fr": "Voir la page"
                                },
                                "url": "{{baseUrl}}{{url}}",
                                "target": "_blank",
                                "priority": 2
                            },
                            "clone": {
                                "label": {
                                    "en": "Clone",
                                    "fr": "Cloner"
                                },
                                "url": "object/edit?main_menu={{main_menu}}&obj_type={{obj_type}}&clone_id={{id}}",
                                "priority": 3
                            },
                            "delete": {
                                "label": {
                                    "en": "Delete",
                                    "fr": "Supprimer"
                                },
                                "priority": 4
                            }
                        }
                    }
                },
                "filters": [
                    {
                        "property": "in_menu",
                        "operator": "FIND_IN_SET",
                        "value": true
                    }
                ],
                "orders": [
                    {
                        "property": "position",
                        "mode": "asc"
                    }
                ]
            }
        },

        "formGroups": {
            "cms.template_options": {
                "title": {
                    "en": "Template Options",
                    "fr": "Options de gabarit"
                },
                "showHeader": false,
                "showTitle": false,
                "icon": "wrench",
                "template": "charcoal/admin/widget/form-group/structure",
                "type": "charcoal/admin/widget/form-group/structure",
                "storageProperty": "template_options"
            },
            "cms.info": {
                "title": "Info",
                "showTitle": false,
                "showHeader": false,
                "icon": "info",
                "properties": [
                    "title",
                    "summary",
                    "image"
                ]
            },
            "cms.gallery": {
                "title": {
                    "fr": "Galerie d'images",
                    "en": "Gallery"
                },
                "showTitle": false,
                "showHeader": false,
                "icon": "photo",
                "template": "charcoal/admin/widget/form-group/attachment",
                "type": "charcoal/admin/widget/form-group/attachment",
                "group": "image-gallery",
                "attachableObjects": {
                    "charcoal/attachment/image": {
                        "label": {
                            "fr": "Image",
                            "en": "Image"
                        }
                    }
                }
            },
            "cms.resources": {
                "title": {
                    "en": "Documents",
                    "fr": "Ressources"
                },
                "showTitle": false,
                "showHeader": false,
                "icon": "paperclip",
                "template": "charcoal/admin/widget/form-group/attachment",
                "type": "charcoal/admin/widget/form-group/attachment",
                "group": "document",
                "attachableObjects": {
                    "charcoal/attachment/file": {
                        "label": {
                            "fr": "Document",
                            "en": "Document"
                        }
                    },
                    "charcoal/attachment/link": {
                        "label": {
                            "fr": "Lien",
                            "en": "Link"
                        }
                    }
                }
            },
            "cms.meta": {
                "showTitle": false,
                "showHeader": false,
                "icon": "tags",
                "title": {
                    "fr": "Description méta",
                    "en": "Meta tags"
                },
                "properties": [
                    "metaTitle",
                    "metaDescription",
                    "metaImage",
                    "keywords"
                ]
            },
            "cms.advanced": {
                "title": "Options",
                "showTitle": false,
                "showHeader": false,
                "icon": "cog",
                "properties": [
                    "master",
                    "externalUrl",
                    "slug",
                    "inMenu",
                    "active"
                ]
            },
            "cms.dev": {
                "title": "Dev",
                "showTitle": false,
                "showHeader": false,
                "icon": "code",
                "tabCssClasses": "pull-right",
                "permissions": ["dev_tab"],
                "properties": [
                    "templateIdent",
                    "sectionType",
                    "locked"
                ]
            },
            "cms.table": {
                "title": {
                    "fr": "Hiérarchie",
                    "en": "Hierarchy"
                },
                "showTitle": false,
                "showHeader": false,
                "icon": "sitemap",
                "template": "utils/widget/form-group/widget",
                "type": "utils/widget/form-group/widget",
                "widgetType": "charcoal/admin/widget/table",
                "objType": "{{obj_type}}",
                "collectionIdent": "cms.default",
                "priority": 7000,
                "sortable": true,
                "renderableData": {
                    "objType": "{{obj_type}}",
                    "collectionConfig": {
                        "properties": [
                        ],
                        "orders": [
                            {
                                "property": "position",
                                "mode": "asc"
                            }
                        ],
                        "filters": [
                            {
                                "property": "master",
                                "value": "{{id}}"
                            }
                        ],
                        "listActions": {
                            "create": {
                                "label": {
                                    "en": "New Page",
                                    "fr": "Nouvelle Page"
                                },
                                "ident": "create",
                                "url": "object/edit?main_menu={{main_menu}}&obj_type={{obj_type}}&form_data[master]={{id}}"
                            },
                            "mainMenu": {
                                "ident": "main_menu",
                                "active": false
                            }
                        },
                        "pagination": {
                            "numPerPage": 100
                        }
                    }
                }
            },
            "cms.revisions": {
                "title": {
                    "fr": "Révisions",
                    "en": "Revisions"
                },
                "showTitle": false,
                "showHeader": false,
                "icon": "floppy-o",
                "template": "charcoal/admin/widget/form-group/object-revisions",
                "type": "charcoal/admin/widget/form-group/object-revisions"
            }
        },

        "formSidebars": {
            "cms.default": {
                "properties": [
                    "created",
                    "createdBy",
                    "lastModified",
                    "lastModifiedBy"
                ],
                "actions": {
                    "returnToMaster": {
                        "label": {
                            "en": "Back up a level",
                            "fr": "Remonter d'un niveau"
                        },
                        "url": "object/edit?main_menu={{main_menu}}&obj_type={{master.objType}}&obj_id={{master.id}}&tab_ident=cms.table",
                        "type": "default",
                        "condition": "{{master}}",
                        "priority": 1
                    },
                    "goto": {
                        "label": {
                            "en": "Go to page",
                            "fr": "Voir la page"
                        },
                        "url": "{{baseUrl}}{{url}}",
                        "target": "_blank",
                        "priority": 2
                    }
                }
            }
        },

        "dashboards": {
            "cms.edit": {
                "layout": {
                    "structure": [
                        {"columns": [1]},
                        {"columns": [1]},
                        {"columns": [1]},
                        {"columns": [1]}
                    ]
                },
                "widgets": {
                    "form": {
                        "priority": 10,
                        "type": "charcoal/admin/widget/object-form",
                        "formIdent": "cms.default",
                        "groupDisplayMode": "tab"
                    }
                }
            },
            "cms.table.hierarchical": {
                "layout": {
                    "structure": [
                        {"columns": [1]}
                    ]
                },
                "widgets": {
                    "list": {
                        "type": "charcoal/admin/widget/cms/hierarchical-section-table",
                        "collectionIdent": "cms.default",
                        "dataSources": ["request"]
                    }
                }
            },
            "cms.table": {
                "layout": {
                    "structure": [
                        {"columns": [1]}
                    ]
                },
                "widgets": {
                    "table": {
                        "type": "charcoal/admin/widget/table",
                        "collectionIdent": "cms.default",
                        "sortable": true,
                        "dataSources": ["request"]
                    }
                }
            }
        },

        "defaultCreateDashboard": "cms.edit",
        "defaultEditDashboard": "cms.edit",
        "defaultCollectionDashboard": "cms.table.hierarchical"
    }
}
