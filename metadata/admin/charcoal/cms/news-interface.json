{
    "admin": {
        "labels": {
            "name": {
                "fr": "Nouvelles",
                "en": "News"
            },
            "singularName": {
                "fr": "Nouvelle",
                "en": "News"
            },
            "editItem": {
                "fr": "Modifier la nouvelle",
                "en": "Edit news"
            },
            "createItem": {
                "fr": "Créer une nouvelle",
                "en": "Create a news"
            },
            "newItem": {
                "fr": "Nouvelle actualité",
                "en": "New news"
            },
            "allItems": {
                "fr": "Toutes les nouvelles",
                "en": "All News"
            },
            "menuItems": {
                "fr": "Nouvelles",
                "en": "News"
            }
        },

        "lists": {
            "charcoal/cms/news-interface/default": {
                "properties": [
                    "category",
                    "newsDate",
                    "title"
                ],
                "listActions": [
                    {
                        "ident": "create",
                        "priority": 10,
                        "url": "object/edit?main_menu={{main_menu}}&obj_type={{obj_type}}"
                    }
                ],
                "objectActions": {
                    "edit": {
                        "label": {
                            "en": "Modify",
                            "fr": "Modifier"
                        },
                        "url": "object/edit?main_menu={{main_menu}}&obj_type={{obj_type}}&obj_id={{id}}",
                        "priority": 1,
                        "splitButton": true,
                        "actions": {
                            "goto": {
                                "label": {
                                    "en": "Go to news",
                                    "fr": "Voir la nouvelle"
                                },
                                "url": "{{baseUrl}}{{url}}",
                                "target": "_blank",
                                "priority": 2
                            },
                            "clone": {
                                "label": {
                                    "en": "Clone",
                                    "fr": "Cloner"
                                },
                                "url": "object/edit?main_menu={{main_menu}}&obj_type={{obj_type}}&clone_id={{id}}",
                                "priority": 3
                            },
                            "delete": {
                                "label": {
                                    "en": "Delete",
                                    "fr": "Supprimer"
                                },
                                "priority": 4
                            }
                        }
                    }
                },
                "orders": {
                    "position": {
                        "property": "position",
                        "mode": "asc"
                    }
                }
            }
        },

        "forms": {
            "charcoal/cms/news-interface/create": {
                "groups": {
                    "charcoal/cms/news-interface/info": {},
                    "charcoal/cms/news-interface/advanced": {},
                    "charcoal/cms/news-interface/meta": {}
                },
                "sidebars": {
                    "charcoal/cms/news-interface/create": {}
                }
            },
            "charcoal/cms/news-interface/edit": {
                "groups": {
                    "charcoal/cms/news-interface/info": {},
                    "charcoal/cms/news-interface/advanced": {},
                    "charcoal/cms/news-interface/meta": {},
                    "charcoal/cms/news-interface/revisions": {}
                },
                "sidebars": {
                    "charcoal/cms/news-interface/default": {}
                }
            }
        },

        "defaultForm": "charcoal/cms/news-interface/edit",

        "formGroups": {
            "charcoal/cms/news-interface/info": {
                "title": "Info",
                "showTitle": false,
                "showHeader": false,
                "icon": "info",
                "properties": [
                    "title",
                    "summary",
                    "content",
                    "image"
                ]
            },
            "charcoal/cms/news-interface/gallery": {
                "title": {
                    "fr": "Galerie d'images",
                    "en": "Gallery"
                },
                "showTitle": false,
                "showHeader": false,
                "icon": "photo",
                "template": "charcoal/admin/widget/form-group/attachment",
                "type": "charcoal/admin/widget/form-group/attachment",
                "group": "image-gallery",
                "attachableObjects": {
                    "charcoal/attachment/object/image": {
                        "label": {
                            "fr": "Image",
                            "en": "Image"
                        }
                    }
                }
            },
            "charcoal/cms/news-interface/resources": {
                "title": {
                    "en": "Documents",
                    "fr": "Ressources"
                },
                "showTitle": false,
                "showHeader": false,
                "icon": "paperclip",
                "template": "charcoal/admin/widget/form-group/attachment",
                "type": "charcoal/admin/widget/form-group/attachment",
                "group": "document",
                "attachableObjects": {
                    "charcoal/attachment/object/file": {
                        "label": {
                            "fr": "Document",
                            "en": "Document"
                        }
                    },
                    "charcoal/attachment/object/link": {
                        "label": {
                            "fr": "Lien",
                            "en": "Link"
                        }
                    }
                }
            },
            "charcoal/cms/news-interface/meta": {
                "showTitle": false,
                "showHeader": false,
                "icon": "tags",
                "title": {
                    "fr": "Description méta",
                    "en": "Meta tags"
                },
                "properties": [
                    "metaTitle",
                    "metaDescription",
                    "metaImage"
                ]
            },
            "charcoal/cms/news-interface/advanced": {
                "title": "Options",
                "showTitle": false,
                "showHeader": false,
                "icon": "cog",
                "layout": {
                    "structure": [
                        {"columns": [1]},
                        {"columns": [1, 1, 1]},
                        {"columns": [1]},
                        {"columns": [1]}
                    ]
                },
                "properties": [
                    "category",
                    "newsDate",
                    "publishDate",
                    "expiryDate",
                    "slug"
                ]
            },
            "charcoal/cms/news-interface/revisions": {
                "title": {
                    "fr": "Révisions",
                    "en": "Revisions"
                },
                "showTitle": false,
                "showHeader": false,
                "icon": "floppy-o",
                "template": "charcoal/admin/widget/form-group/object-revisions",
                "type": "charcoal/admin/widget/form-group/object-revisions"
            }
        },

        "formSidebars": {
            "charcoal/cms/event-interface/create": {
                "properties": []
            },
            "charcoal/cms/event-interface/default": {
                "properties": [
                    "created",
                    "createdBy",
                    "lastModified",
                    "lastModifiedBy"
                ]
            }
        },

        "dashboards": {
            "cms.create": {
                "layout": {
                    "structure": [
                        {"columns": [1]}
                    ]
                },
                "widgets": {
                    "form": {
                        "priority": 10,
                        "type": "charcoal/admin/widget/object-form",
                        "formIdent": "charcoal/cms/news-interface/edit",
                        "groupDisplayMode": "tab"
                    }
                }
            },
            "cms.edit": {
                "layout": {
                    "structure": [
                        {"columns": [1]}
                    ]
                },
                "widgets": {
                    "form": {
                        "priority": 10,
                        "type": "charcoal/admin/widget/object-form",
                        "formIdent": "charcoal/cms/news-interface/edit",
                        "groupDisplayMode": "tab"
                    }
                }
            },
            "cms.table": {
                "layout": {
                    "structure": [
                        {"columns": [1]}
                    ]
                },
                "widgets": {
                    "table": {
                        "type": "charcoal/admin/widget/table",
                        "collectionIdent": "charcoal/cms/news-interface/default",
                        "dataSources": ["request"]
                    }
                }
            }
        },

        "defaultCreateDashboard": "cms.create",
        "defaultEditDashboard": "cms.edit",
        "defaultCollectionDashboard": "cms.table"
    }
}
