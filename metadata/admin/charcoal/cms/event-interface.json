{
    "admin": {
        "labels": {
            "name": {
                "fr": "Événements",
                "en": "Event"
            },
            "singularName": {
                "fr": "Événement",
                "en": "Event"
            },
            "editItem": {
                "fr": "Modifier l'événement",
                "en": "Edit event"
            },
            "createItem": {
                "fr": "Créer un événement",
                "en": "Create an event"
            },
            "newItem": {
                "fr": "Nouvel événement",
                "en": "New event"
            },
            "allItems": {
                "fr": "Tous les événements",
                "en": "All Events"
            },
            "menuItems": {
                "fr": "Événements",
                "en": "Events"
            }
        },

        "lists": {
            "charcoal/cms/event-interface/default": {
                "properties": [
                    "category",
                    "title",
                    "startDate",
                    "endDate",
                    "publishDate"
                ],
                "listActions": [
                    {
                        "ident": "create",
                        "priority": 10,
                        "url": "object/edit?obj_type={{obj_type}}"
                    }
                ],
                "objectActions": {
                    "edit": {
                        "label": {
                            "en": "Modify",
                            "fr": "Modifier"
                        },
                        "url": "object/edit?obj_type={{obj_type}}&obj_id={{id}}",
                        "priority": 1,
                        "splitButton": true,
                        "actions": {
                            "goto": {
                                "label": {
                                    "en": "Go to event",
                                    "fr": "Voir l'événement"
                                },
                                "url": "{{baseUrl}}{{url}}",
                                "target": "_blank",
                                "priority": 2
                            },
                            "clone": {
                                "label": {
                                    "en": "Clone",
                                    "fr": "Cloner"
                                },
                                "url": "object/edit?obj_type={{obj_type}}&clone_id={{id}}",
                                "priority": 3
                            },
                            "delete": {
                                "label": {
                                    "en": "Delete",
                                    "fr": "Supprimer"
                                },
                                "priority": 4
                            }
                        }
                    }
                },
                "orders": [
                    {
                        "property": "startDate",
                        "mode": "desc"
                    }
                ]
            }
        },

        "forms": {
            "charcoal/cms/event-interface/create": {
                "groups": {
                    "cms.info": {},
                    "cms.meta": {},
                    "cms.advanced": {},
                    "charcoal/cms/event-interface/tickets": {}
                },
                "sidebars": {
                    "charcoal/cms/event-interface/create": {}
                }
            },
            "charcoal/cms/event-interface/edit": {
                "groups": {
                    "cms.info": {},
                    "cms.meta": {},
                    "cms.advanced": {},
                    "charcoal/cms/event-interface/tickets": {},
                    "cms.revisions": {}
                },
                "sidebars": {
                    "charcoal/cms/event-interface/default": {}
                }
            }
        },

        "formGroups": {
            "cms.info": {
                "layout": {
                    "structure": [
                        {"columns": [1]},
                        {"columns": [1]},
                        {"columns": [1]},
                        {"columns": [1]},
                        {"columns": [1, 1]}
                    ]
                },
                "title": "Info",
                "icon": "info",
                "properties": [
                    "title",
                    "summary",
                    "content",
                    "image",
                    "infoUrl",
                    "infoPhone"
                ]
            },
            "cms.gallery": {
                "title": {
                    "fr": "Galerie d'images",
                    "en": "Gallery"
                },
                "icon": "photo",
                "template": "charcoal/admin/widget/form-group/attachment",
                "type": "charcoal/admin/widget/form-group/attachment",
                "group": "image-gallery",
                "attachableObjects": {
                    "charcoal/attachment/object/image": {
                        "label": {
                            "fr": "Image",
                            "en": "Image"
                        }
                    }
                }
            },
            "cms.resources": {
                "title": {
                    "en": "Documents",
                    "fr": "Ressources"
                },
                "icon": "paperclip",
                "template": "charcoal/admin/widget/form-group/attachment",
                "type": "charcoal/admin/widget/form-group/attachment",
                "group": "document",
                "attachableObjects": {
                    "charcoal/attachment/object/file": {
                        "label": {
                            "fr": "Document",
                            "en": "Document"
                        }
                    },
                    "charcoal/attachment/object/link": {
                        "label": {
                            "fr": "Lien",
                            "en": "Link"
                        }
                    }
                }
            },
            "cms.meta": {
                "icon": "tags",
                "title": {
                    "fr": "Description méta",
                    "en": "Meta tags"
                },
                "properties": [
                    "metaTitle",
                    "metaDescription",
                    "metaImage",
                    "keywords"
                ]
            },
            "cms.advanced": {
                "layout": {
                    "structure": [
                        {"columns": [1]},
                        {"columns": [1, 1]},
                        {"columns": [1, 1]},
                        {"columns": [1]},
                        {"columns": [1]}
                    ]
                },
                "title": "Options",
                "icon": "cog",
                "properties": [
                    "category",
                    "startDate",
                    "endDate",
                    "publishDate",
                    "expiryDate",
                    "slug"
                ],
                "priority": 600
            },
            "cms.revisions": {
                "title": {
                    "fr": "Révisions",
                    "en": "Revisions"
                },
                "icon": "floppy-o",
                "template": "charcoal/admin/widget/form-group/object-revisions",
                "type": "charcoal/admin/widget/form-group/object-revisions"
            },
            "charcoal/cms/event-interface/tickets": {
                "layout": {
                    "structure": [
                        {"columns": [1, 1]},
                        {"columns": [1]},
                        {"columns": [1, 1]}
                    ]
                },
                "title": {
                    "fr": "Billets",
                    "en": "Tickets"
                },
                "icon": "credit-card",
                "properties": [
                    "ticketPriceMin",
                    "ticketPriceMax",
                    "ticketSummary",
                    "ticketUrl",
                    "ticketPhone"
                ]
            }
        },

        "formSidebars": {
            "charcoal/cms/event-interface/create": {
                "properties": []
            },
            "charcoal/cms/event-interface/default": {
                "properties": [
                    "created",
                    "createdBy",
                    "lastModified",
                    "lastModifiedBy"
                ]
            }
        },

        "dashboards": {
            "cms.create": {
                "layout": {
                    "structure": [
                        {"columns": [1]}
                    ]
                },
                "widgets": {
                    "form": {
                        "priority": 10,
                        "type": "charcoal/admin/widget/object-form",
                        "formIdent": "charcoal/cms/event-interface/create",
                        "groupDisplayMode": "tab"
                    }
                }
            },
            "cms.edit": {
                "layout": {
                    "structure": [
                        {"columns": [1]}
                    ]
                },
                "widgets": {
                    "form": {
                        "priority": 10,
                        "type": "charcoal/admin/widget/object-form",
                        "formIdent": "charcoal/cms/event-interface/edit",
                        "groupDisplayMode": "tab"
                    }
                }
            },
            "cms.table": {
                "layout": {
                    "structure": [
                        {"columns": [1]}
                    ]
                },
                "widgets": {
                    "table": {
                        "type": "charcoal/admin/widget/table",
                        "collectionIdent": "charcoal/cms/event-interface/default",
                        "dataSources": ["request"]
                    }
                }
            }
        },
        "defaultCreateDashboard": "cms.edit",
        "defaultEditDashboard": "cms.edit",
        "defaultCollectionDashboard": "cms.table"
    }
}
