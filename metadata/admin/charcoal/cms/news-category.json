{
    "properties": {
        "name": {
            "required": true
        }
    },

    "admin": {
        "labels": {
            "name": {
                "en": "News Category",
                "fr": "Catégorie de nouvelles"
            },
            "singularName": {
                "en": "News Category",
                "fr": "Catégorie de nouvelles"
            },
            "editItem": {
                "en": "Edit News Category",
                "fr": "Modifier la catégory de nouvelles"
            },
            "newItem": {
                "en": "Add a News Category",
                "fr": "Nouvelle catégorie de nouvelles"
            },
            "createItem": {
                "en": "Create News Category",
                "fr": "Créer une catégorie de nouvelles"
            },
            "allItems": {
                "en": "All News Categories",
                "fr": "Toutes les catégories de nouvelles"
            },
            "menuItems": {
                "en": "News Category",
                "fr": "Catégorie de nouvelles"
            }
        },

        "lists": {
            "default": {
                "properties": [
                    "name"
                ],
                "orders": [
                    {
                        "property": "name",
                        "mode": "asc"
                    }
                ],
                "listActions": [
                    {
                        "ident": "create",
                        "url": "object/edit?obj_type={{obj_type}}"
                    }
                ],
                "objectActions": {
                    "edit": {
                        "url": "object/edit?obj_type={{obj_type}}&obj_id={{id}}",
                        "priority": 1,
                        "splitButton": true,
                        "actions": {
                            "delete": {
                                "label": {
                                    "en": "Delete",
                                    "fr": "Supprimer"
                                },
                                "priority": 2
                            }
                        }
                    }
                }
            }
        },

        "defaultList": "default",

        "forms": {
            "default": {
                "groups": {
                    "info": {
                        "title": "Informations",
                        "properties": [
                            "name"
                        ]
                    }
                },
                "sidebars": {
                    "actions": {}
                }
            }
        },

        "defaultForm": "default",

        "dashboards": {
            "cms.edit": {
                "layout": {
                    "structure": [
                        {"columns": [1]}
                    ]
                },
                "widgets": {
                    "form": {
                        "type": "charcoal/admin/widget/object-form",
                        "novalidate": true,
                        "formIdent": "default"
                    }
                }
            },
            "cms.table": {
                "layout": {
                    "structure": [
                        {"columns": [1]}
                    ]
                },
                "widgets": {
                    "form": {
                        "type": "charcoal/admin/widget/table",
                        "collectionIdent": "default",
                        "sortable": false,
                        "dataSources": ["request"]
                    }
                }
            }
        },

        "defaultCreateDashboard": "cms.edit",
        "defaultEditDashboard": "cms.edit",
        "defaultCollectionDashboard": "cms.table"
    }
}
