{
    "template": {
        "ident": "charcoal/cms/news"
    },

    "routable": {
        "editable": true,
        "pattern": {
            "fr": "{{ title }}",
            "en": "{{ title }}"
        },
        "prefix": {
            "fr": "fr/actualites/",
            "en": "en/news/"
        }
    },

    "defaultData": {
        "templateIdent": "generic",
        "mainMenu": "content",
        "secondaryMenu": "content"
    },

    "properties": {
        "id": {
            "type": "id"
        },
        "title": {
            "type": "string",
            "l10n": true,
            "label": {
                "en": "Title",
                "fr": "Titre"
            }
        },
        "subtitle": {
            "type": "text",
            "l10n": true,
            "inputType": "charcoal/admin/property/input/textarea",
            "label": {
                "en": "Subtitle",
                "fr": "Sous-titre"
            }
        },
        "summary": {
            "type": "html",
            "l10n": true,
            "label": {
                "en": "Summary",
                "fr": "Sommaire"
            }
        },
        "content": {
            "type": "html",
            "l10n": true,
            "label": {
                "en": "Content",
                "fr": "Contenu"
            }
        },
        "category": {
            "objType": "charcoal/cms/news-category"
        },
        "image": {
            "type": "image",
            "l10n": true,
            "publicAccess": true,
            "uploadPath": "uploads/news/"
        },
        "newsDate": {
            "type": "date-time",
            "label": {
                "en": "News date",
                "fr": "Date de la nouvelle"
            },
            "description": {
                "en": "The \"display\" date of this news.",
                "fr": "La date affichée de la nouvelle."
            },
            "notes": {
                "en": "Will be set automatically to the current date if blank.",
                "fr": "La date actuelle sera utilisée automatiquement si laissée vide."
            }
        },
        "infoUrl": {
            "type": "url",
            "l10n": true
        },
        "keywords": {
            "type": "object",
            "objType": "charcoal/cms/tag",
            "inputType": "charcoal/admin/property/input/selectize",
            "multiple": true,
            "label": {
                "fr": "Mots-clés",
                "en": "Keywords"
            },
            "description": {
                "fr": "Les mots-clés permettent d'optimiser la recherche",
                "en": "Key-words optimises research"
            }
        }
    }
}
